<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:padding="@dimen/login_dialog_padding"
    android:background="@drawable/dialog_background"
    android:layout_height="wrap_content" android:gravity="center">
    <TextView
        android:layout_marginBottom="@dimen/dialog_login_title_bottom_margin"
        android:id="@+id/dialog_login_title"
        android:layout_centerHorizontal="true"
        android:text="@string/login_dialog_title"
        android:textSize="@dimen/dialog_title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_below="@+id/dialog_login_title"
    android:gravity="center|center_horizontal"
    android:id="@+id/dialog_title_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
    android:id="@+id/user_img"
    android:layout_width="80dp"
    android:layout_height="80dp" />
    <TextView
        android:padding="3dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/user_img"
        android:text="Hello"
        android:id="@+id/dialog_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/dialog_title_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:layout_margin="@dimen/dialog_login_btn_margin"
        android:id="@+id/ok_button"
        android:text="@string/dialog_login_btn_approve_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="@dimen/dialog_login_btn_margin"
        android:id="@+id/cancel_button"
        android:text="@string/dialog_login_logout_btn_txt"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>